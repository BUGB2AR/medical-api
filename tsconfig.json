{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2015",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*.ts", "src/serverless.ts"],
  "exclude": ["node_modules"]
}